<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="product_report_simple_label1" inherit_id="product.report_simple_label">
        <xpath expr="//table[@class='table table-bordered mb-0']" position="replace">
            <table class="table table-bordered mb-0" style="border: 2px solid black;">
                <tr>
                    <th class="table-active text-left" style="height: 4rem;">
                        <strong t-field="product.display_name"/>
                    </th>
                </tr>
                <tr>
                    <td class="text-center align-middle" style="height: 6rem">
                        <t t-if="product.barcode">
                            <img alt="Barcode" t-if="len(product.barcode) == 13"
                                 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(product.obarcode or ''), 600, 150)"
                                 style="width:100%;height::4rem;"/>
                            <img alt="Barcode" t-elif="len(product.barcode) == 8"
                                 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(product.barcode or ''), 600, 150)"
                                 style="width:100%;height::4rem;"/>
                            <img alt="Barcode" t-else=""
                                 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(product.barcode or ''), 600, 150)"
                                 style="width:100%;height::4rem;"/>
                            <span t-field="product.barcode"/>
                        </t>
                        <t t-else="">
                            <span class="text-muted">No barcode available</span>
                        </t>
                    </td>
                </tr>
            </table>
        </xpath>
    </template>

    <template id="product_report_simple_label2" inherit_id="product.report_producttemplatelabel">
        <xpath expr="//t[@t-call='web.basic_layout']" position="replace">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="template">
                    <div class="page">
                        <t t-foreach="template.product_variant_ids" t-as="product">
                            <t t-call="product.report_simple_label">
                                <t t-set="product" t-value="product"/>
                            </t>
                        </t>
                        <p style="page-break-after: always;"/>
                    </div>
                </t>
            </t>
        </xpath>
    </template>
</odoo>
