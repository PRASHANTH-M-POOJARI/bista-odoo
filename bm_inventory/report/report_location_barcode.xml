<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="stock_report_location_barcode1" inherit_id="stock.report_location_barcode">
        <xpath expr="//t[@t-set='title']" position="replace">
            <t t-name="stock.report_location_barcode">
                <t t-call="web.html_container">
                    <div t-foreach="[docs[x:x+4] for x in range(0, len(docs), 4)]" t-as="page_docs"
                         class="page article page_stock_location_barcodes">
                        <t t-foreach="page_docs" t-as="o">
                            <t t-if="o.barcode">
                                <t t-set="content" t-value="o.barcode"/>
                            </t>
                            <t t-if="not o.barcode">
                                <t t-set="content" t-value="o.name"/>
                            </t>
                            <img class="barcode"
                                 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', content, 600, 100)"
                                 alt="Barcode"/>
                            <div style="page-break-after: always;"/>
                        </t>
                    </div>
                </t>
            </t>
        </xpath>
    </template>
</odoo>


